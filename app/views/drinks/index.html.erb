<div class="container mt-5">
  <h1 class="text-center mb-4" id = "indextitle">Cocktail Drinks</h1>

  <%= form_tag(drinks_path, method: :get, class: "mb-4 text-center") do %>
    <%= label_tag :lookingfor, "Search by exact name:", class: "form-label" %>
    <%= text_field_tag :lookingfor, params[:lookingfor], placeholder: "a", class: "form-control d-inline-block w-auto" %>
  <%= submit_tag "Search", class: "btn btn-primary mt-2" %>
  <% end %>


  <% if @drinks.present? %>
    <div class="row justify-content-center">
      <div class="col-12 col-md-10">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="thead-dark">
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Category</th>
                <th>Details</th>
              </tr>
            </thead>
            <tbody>
              <% @drinks.each do |drink| %>
                <tr>
                  <td><%= drink_image_tag(drink) %></td>
                  <td><%= drink["strDrink"] %></td>
                  <td><%= drink["strCategory"] || "No category available." %></td>
                  <td>
                    <%= link_to "View Details", details_drink_path(drink["idDrink"]), class: "btn btn-info" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <p class="text-center">No drinks found.</p>
  <% end %>
</div>
